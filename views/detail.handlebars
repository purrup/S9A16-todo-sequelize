<div class="container mt-5" id="detail">
  <div class="row">
    <button class="btn btn-info btn-lg mb-4" id="back"><a href="/">back</a></button>
  </div>
  <form action="/todos/{{{todo.id}}}/delete?_method=DELETE" method="post" style="display:inline">
    <div class="row">
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <input type="checkbox" name="done" {{#if todo.done }} checked{{/if}} disabled />
          </div>
        </div>
        <input type="text" placeholder="name" name="name" value="{{{todo.name}}}" class="form-control" disabled>
        <div class="input-group-append">
          <a href="/todos/{{{todo.id}}}/edit" class="btn btn-success">edit</a>
          <button type="submit" class="btn btn-danger">delete</button>
        </div>
      </div>
    </div>
  </form>
</div>