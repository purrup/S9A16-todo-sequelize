<div class="container mt-5" id="edit">
  <div class="row">
    <button class="btn btn-info btn-lg mb-4" id="back"><a href="/">back</a></button>
  </div>
  <form action="/todos/{{{todo.id}}}?_method=PUT" method="POST">

    <div class="row">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <input type="checkbox" name="done" {{#if todo.done }} checked{{/if}} />
          </div>
        </div>
        <input type="text" placeholder="name" name="name" value="{{{todo.name}}}" class="form-control">
        <div class="input-group-append">
          <button type="submit" class="btn btn-success">Edit</button>
        </div>
      </div>
    </div>
  </form>
</div>